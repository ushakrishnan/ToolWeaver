# Azure OpenAI (required)
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Azure Computer Vision (optional)
AZURE_CV_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# Redis Cache (optional)
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
ENABLE_REDIS=false

# WandB Monitoring (optional)
WANDB_API_KEY=your_wandb_key_here
WANDB_PROJECT=ToolWeaver
WANDB_ENTITY=your-entity

# Small Model Configuration (optional)
SMALL_MODEL_PROVIDER=ollama
SMALL_MODEL_NAME=phi3
OLLAMA_BASE_URL=http://localhost:11434

# Qdrant Vector Database (optional)
QDRANT_URL=https://your-cluster.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_key_here
QDRANT_COLLECTION=toolweaver_tools

# Feature Flags
ENABLE_DISCOVERY=true
ENABLE_SEARCH=true
ENABLE_CACHE=true
ENABLE_MONITORING=true
ENABLE_SMALL_MODEL=false
ENABLE_CODE_EXECUTION=true
ENABLE_PARALLEL_EXECUTION=true

# Performance Settings
SEARCH_TOP_K=5
SEARCH_THRESHOLD=20
CACHE_TTL=3600
DISCOVERY_CACHE_TTL=86400
CODE_EXEC_TIMEOUT=5
