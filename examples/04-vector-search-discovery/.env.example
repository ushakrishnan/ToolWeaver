# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Optional: OpenAI API (alternative to Azure)
# OPENAI_API_KEY=sk-your-key-here

# Optional: Anthropic Claude (alternative to Azure)
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# Search Configuration (optional - has defaults)
TOOL_SEARCH_STRATEGY=hybrid  # hybrid, bm25, or embeddings
TOOL_SEARCH_TOP_K=5
TOOL_SEARCH_MIN_SCORE=0.5

# Cache Configuration (optional - has defaults)
ENABLE_DISCOVERY_CACHE=true
DISCOVERY_CACHE_TTL=86400  # 24 hours in seconds
